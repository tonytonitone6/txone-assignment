{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"jsx": "react-jsx",
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"moduleResolution": "node",
		"baseUrl": "./",
		"paths": {
			"@components/*": ["src/components/*"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "dist"]
}
